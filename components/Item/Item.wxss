/* components/Item/Item.wxss */
.item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #DDD;
}

.item:last-child {
  border-bottom: 0;
}

.item .checkbox {
  margin-right: 20rpx;
}

.item .content {
  flex: 1;
  font-size: 30rpx;
  color: #9B9B9B;
}

.item.finished .content {
  text-decoration: line-through;
  color: #DDD;
}

.item .content-tags {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item .tags {
  display: flex;
  height: 28rpx;
}

.item .tag { 
  margin-right: 10rpx;
  color: #7ED321;
  font-size: 20rpx;
  text-align: center;
}

.item.finished .tag {
  color: #DDD;
}